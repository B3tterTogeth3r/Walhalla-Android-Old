<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    style="@style/AddNewSemester.RelativeLayout"
    android:paddingTop="5dp"
    android:paddingBottom="5dp"
    android:layout_gravity="top">

    <TextView
        android:id="@+id/new_notes_row_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="100dp"
        android:padding="4dp"
        android:paddingStart="8dp"
        android:paddingEnd="60dp"
        android:visibility="gone" />


    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/new_notes_row_text_input_outline"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="100dp"
        android:padding="4dp"
        android:paddingStart="8dp"
        android:paddingEnd="60dp"
        android:visibility="visible"
        app:boxBackgroundColor="@android:color/transparent">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/new_notes_row_text_input"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="80dp"
            android:padding="4dp"
            android:paddingStart="8dp"
            android:paddingEnd="60dp"
            android:visibility="visible" />
    </com.google.android.material.textfield.TextInputLayout>

    <ImageButton
        android:id="@+id/new_notes_row_edit"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:background="@android:color/transparent"
        android:contentDescription="@string/edit"
        android:minHeight="50dp"
        android:padding="10dp"
        android:scaleType="fitCenter"
        android:visibility="gone"
        android:src="@drawable/ic_edit" />

    <ImageButton
        android:id="@+id/new_notes_row_remove"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/new_notes_row_edit"
        android:layout_alignParentEnd="true"
        android:background="@android:color/transparent"
        android:contentDescription="@string/remove"
        android:minHeight="50dp"
        android:padding="10dp"
        android:visibility="gone"
        android:scaleType="fitCenter"
        android:src="@drawable/ic_remove" />

    <ImageButton
        android:id="@+id/new_notes_row_add"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/new_notes_row_edit"
        android:layout_alignParentEnd="true"
        android:background="@android:color/transparent"
        android:contentDescription="@string/remove"
        android:minHeight="50dp"
        android:padding="10dp"
        android:scaleType="fitCenter"
        android:src="@drawable/ic_done" />

    <ImageButton
        android:id="@+id/new_notes_row_abort"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/new_notes_row_add"
        android:layout_alignParentEnd="true"
        android:background="@android:color/transparent"
        android:contentDescription="@string/remove"
        android:minHeight="50dp"
        android:padding="10dp"
        android:scaleType="fitCenter"
        android:src="@drawable/ic_close" />

</RelativeLayout>
