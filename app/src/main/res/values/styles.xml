<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">true</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="FullScreenAlertDialog" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:windowBackground">@drawable/background_button</item>
    </style>

    <style name="AppTheme.FullScreenDialog" parent="Theme.MaterialComponents.Light.Dialog">
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="android:windowIsFloating">false</item>
        <item name="titleTextColor">@color/white</item>
        <item name="android:windowBackground">@android:color/white</item>
        <item name="actionMenuTextColor">@color/white</item>
    </style>

    <style name="AppTheme.Slide">
        <item name="android:windowEnterAnimation">@anim/slide_up</item>
        <item name="android:windowExitAnimation">@anim/slide_down</item>
    </style>

    <style name="SplashTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:padding">20dp</item>
        <item name="android:windowBackground">@drawable/background_splash</item>
    </style>

    <style name="BgTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:padding">20dp</item>
        <item name="alpha">.1</item>
        <item name="android:windowBackground">@drawable/background</item>
    </style>

    <style name="MySuperAppTheme" />

    <style name="Settings">
        <item name="android:orientation">vertical</item>
        <item name="android:padding">2dp</item>
        <item name="android:layout_margin">2dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="Settings.Layout">
        <item name="android:background">@drawable/background_profile</item>
        <item name="android:orientation">vertical</item>
        <item name="android:padding">8dp</item>
        <item name="android:layout_margin">8dp</item>
    </style>

    <style name="Settings.TV">
        <item name="android:orientation">horizontal</item>
        <item name="android:paddingStart">2dp</item>
        <item name="android:layout_marginStart">2dp</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Body1</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="Settings.TV.StartEnd">
        <item name="android:orientation">horizontal</item>
        <item name="android:paddingStart">2dp</item>
        <item name="android:layout_marginStart">2dp</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Body1</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="Settings.TV.Sub">
        <item name="android:orientation">vertical</item>
        <item name="android:paddingStart">2dp</item>
        <item name="android:layout_marginStart">2dp</item>
        <item name="android:paddingTop">2dp</item>
        <item name="android:paddingBottom">4dp</item>
        <item name="android:layout_marginTop">2dp</item>
        <item name="android:layout_marginBottom">4dp</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Body1</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="Settings.TV.Title">
        <item name="android:orientation">vertical</item>
        <item name="android:paddingStart">2dp</item>
        <item name="android:layout_marginStart">2dp</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Title</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="Settings.Row" />

    <style name="Settings.Row.Title">
        <item name="android:paddingEnd">20dp</item>
        <item name="android:layout_marginEnd">20dp</item>
        <item name="android:layout_alignParentStart">true</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Body2</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="Settings.Row.Content">
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Body1</item>
        <item name="android:paddingStart">140dp</item>
        <item name="android:layout_alignParentEnd">false</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="Settings.Row.Image">
        <item name="android:layout_alignParentEnd">true</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="Diashow">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">200dp</item>
    </style>

    <style name="Diashow.Left">
        <item name="android:visibility">gone</item>
        <item name="android:id">@id/diashow_previous</item>
        <item name="android:padding">8dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignParentStart">true</item>
        <item name="android:layout_alignParentEnd">false</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:layout_marginStart">4dp</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:contentDescription">@string/diashow_left</item>
        <item name="android:src">@drawable/ic_arrow_left</item>
        <item name="android:background">@drawable/background_button</item>
    </style>

    <style name="Diashow.Right">
        <item name="android:visibility">gone</item>
        <item name="android:padding">8dp</item>
        <item name="android:layout_marginEnd">4dp</item>
        <item name="android:id">@id/diashow_next</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignParentStart">false</item>
        <item name="android:layout_alignParentEnd">true</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:contentDescription">@string/diashow_right</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:src">@drawable/ic_arrow_right</item>
        <item name="android:background">@drawable/background_button</item>
    </style>

    <style name="Diashow.Image">
        <item name="android:padding">2dp</item>
        <item name="android:layout_height">180dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_alignParentStart">false</item>
        <item name="android:layout_alignParentEnd">false</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:contentDescription">@string/diashow_icon</item>
        <item name="android:src">@drawable/wappen_2017</item>
    </style>

    <style name="Diashow.Description">
        <item name="android:id">@id/diashow_description</item>
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:layout_alignBottom">@id/diashow_image</item>
        <item name="android:layout_alignStart">@id/diashow_image</item>
        <item name="android:layout_alignEnd">@id/diashow_image</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/background_image_description</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Subhead.Inverse</item>
    </style>

    <style name="History">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="History.Layout">
        <item name="android:orientation">vertical</item>
        <item name="android:background">@drawable/background_profile</item>
    </style>

    <style name="History.Title">
        <item name="android:orientation">vertical</item>
        <item name="android:paddingStart">2dp</item>
        <item name="android:layout_marginStart">2dp</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Title</item>
    </style>

    <style name="History.Subtitle">
        <item name="android:orientation">vertical</item>
        <item name="android:paddingStart">2dp</item>
        <item name="android:layout_marginStart">2dp</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Subhead</item>
    </style>

    <style name="History.Subtitle2">
        <item name="android:orientation">vertical</item>
        <item name="android:paddingStart">2dp</item>
        <item name="android:layout_marginStart">2dp</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Body2</item>
    </style>

    <style name="History.Text">
        <item name="android:paddingStart">2dp</item>
        <item name="android:layout_marginStart">2dp</item>
        <item name="android:paddingTop">2dp</item>
        <item name="android:paddingBottom">4dp</item>
        <item name="android:layout_marginTop">2dp</item>
        <item name="android:layout_marginBottom">4dp</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Body1</item>
    </style>

    <style name="History.TableLayout">
        <item name="android:id">@id/table</item>
        <item name="android:padding">2dp</item>
        <item name="android:layout_margin">4dp</item>
    </style>

    <style name="History.TableRow">
        <item name="android:background">@drawable/profile_border</item>
        <item name="android:padding">2dp</item>
        <item name="android:layout_margin">4dp</item>
    </style>

    <style name="History.Button">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_margin">14dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/background_button</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Body2</item>
    </style>

    <style name="SocialMediaButtons">
        <item name="android:background">@android:color/transparent</item>
        <item name="android:padding">4dp</item>
        <item name="android:layout_width">?actionBarSize</item>
        <item name="android:layout_height">?actionBarSize</item>
        <item name="android:scaleType">fitCenter</item>
    </style>

    <style name="AddNewSemester" />

    <style name="AddNewSemester.Button" parent="History.Button">
        <item name="android:layout_width">150dp</item>
    </style>

    <style name="AddNewSemester.ImageButton" parent="History.Button">
        <item name="android:layout_height">150dp</item>
        <item name="android:scaleType">fitCenter</item>
        <item name="android:layout_width">150dp</item>
        <item name="android:padding">10dp</item>
        <item name="android:src">@drawable/wappen_2017</item>
        <item name="android:background">@drawable/image_border</item>
    </style>

    <style name="AddNewSemester.TextView" parent="History.Text">
        <item name="android:layout_gravity">center</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Subhead</item>
    </style>

    <style name="AddNewSemester.RelativeLayout" parent="Settings.TV.StartEnd">
        <item name="android:background">@drawable/background_profile</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Subhead</item>
    </style>

    <style name="AddNewSemester.Person">
        <item name="android:orientation">vertical</item>
        <item name="android:padding">8dp</item>
        <item name="android:layout_margin">8dp</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Body1</item>
        <item name="android:paddingStart">140dp</item>
        <item name="android:layout_alignParentEnd">false</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">start</item>
        <item name="android:paddingEnd">21dp</item>
    </style>

    <style name="AddNewSemester.Person.Title" parent="Settings.Row.Title">
        <item name="android:layout_centerVertical">true</item>
    </style>

    <style name="AddNewSemester.Person.Image">
        <item name="android:layout_width">80dp</item>
        <item name="android:layout_height">80dp</item>
        <item name="android:layout_alignParentEnd">true</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_margin">8dp</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">8dp</item>
    </style>

</resources>